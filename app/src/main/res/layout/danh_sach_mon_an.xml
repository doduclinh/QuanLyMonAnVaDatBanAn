<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_food"
            android:layout_width="156dp"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/FoodID_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/FoodName_tv"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/FoodName_tv"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:text="id" />

            <TextView
                android:id="@+id/FoodName_tv"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FoodID_tv"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/imageView_food"
                android:layout_toRightOf="@+id/imageView_food"
                android:text="name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/FoodKind_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/FoodPrice_tv"
                android:layout_alignStart="@+id/FoodPrice_tv"
                android:layout_below="@+id/FoodPrice_tv"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:text="loai"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/FoodPrice_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/FoodName_tv"
                android:layout_alignStart="@+id/FoodName_tv"
                android:layout_below="@+id/FoodName_tv"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:text="TextView"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_Update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sửa" />

                <Button
                    android:id="@+id/btn_Delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xóa" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>